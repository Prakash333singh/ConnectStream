{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": ["debug", "info", "log", "trace"]
      }
    ],
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "semi": ["error", "always"],
    "@typescript-eslint/no-shadow": ["error"],
    "@typescript-eslint/no-unused-vars": ["warn"]
  }
}
